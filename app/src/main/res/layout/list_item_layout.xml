<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMainInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding"
            android:text="vvacancie"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tvData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="@dimen/padding"
            android:inputType="date"
            android:text="12/10/2012"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/imageRequest"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="@dimen/padding"
            android:background="@drawable/ic_profile_name" />

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:text="info info"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="14"
        >

        <ImageView
            android:id="@+id/imageSalary"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="@dimen/padding"
            android:background="@drawable/ic_salary"
            android:layout_weight="0"
             />

        <TextView
            android:id="@+id/tvSalary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:padding="@dimen/padding"
            android:text="32000 sm"
            android:textSize="32sp" />

        <CheckBox
            android:id="@+id/cbFav"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:layout_weight="4"
            android:padding="@dimen/padding"
            android:button="@drawable/cb_background" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32000 sm" />

</LinearLayout>